}
<head>
    <style>
        a {
            color: lightblue;
        }
    </style>
</head>
<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm("Index", "VRHeadsetModels", FormMethod.Get))
{
    <p>
