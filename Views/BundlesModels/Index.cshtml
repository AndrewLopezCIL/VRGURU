@model IEnumerable<Chapter4CodeFirst.Models.BundlesModels>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<head>
    <style>
        a {
            color: white;
        }
    </style>
</head>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" style="background-color:gray">
    <tr style="background-color: dimgray">
