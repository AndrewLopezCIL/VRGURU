        <th>
            @Html.DisplayNameFor(model => model.HeadsetBundledID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BundledItem)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
