<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>VR GURU</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        body {
            padding-top: 0px;
        }

        .navbar a:link {
            color: white;
            text-decoration: none;
        }

        .navbar a:visited {
            color: silver;
        }

        .navbar a:hover {
            color: lemonchiffon;
        }
    </style>
</head>
<body style="background-color:lightsteelblue;">
    <header>
        <nav class="navbar navbar-expand-sm bg-secondary navbar-dark">
            <a class="navbar-brand" href="@Url.Action("Index","Home")">VR GURU</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav">
                    <li class="nav-item nav-link">
                        @Html.ActionLink("Home", "Index", "Home")
                    </li>
                    <li class="nav-item nav-link">
                        @Html.ActionLink("About", "About", "Home")
                    </li>
                    <li class="nav-item nav-link">
                        @Html.ActionLink("Contact", "Contact", "Home")
                    </li>
                    <li class="nav-item nav-link">
                        @Html.ActionLink("VR Headsets", "Index", "VRHeadsetModels")
                    </li>
                    <li class="nav-item nav-link">
                        @Html.ActionLink("Headset Listings", "Display", "VRHeadsetModels")
                    </li>

                    @*  <li class="nav-item nav-link">
               @Html.ActionLink("Stores", "Index", "StoresModels")
           </li>*@
        <li class="nav-item nav-link">
               @Html.ActionLink("Bundles", "Index", "BundlesModels")
                    

                    <li class="nav-item nav-link">
                        @Html.ActionLink("Display", "Display", "VRHeadsetModels")
                    </li>
                </ul>
                <ul class="nav navbar-nav ml-auto">
                    @*<li class="nav-item nav-link"><i class="fas fa-user-plus"></i><a href="#">Register</a>@Html.ActionLink("Register", "SignUp", "AccountManager")/li>
        <li class="nav-item nav-link"><i class="fas fa-sign-in-alt"></i><a>Login</a>@Html.ActionLink("Login", "Login", "AccountManager")</li>*@
                </ul>
            </div>
        </nav>
    </header>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Andrew Lopez VR GURU</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
